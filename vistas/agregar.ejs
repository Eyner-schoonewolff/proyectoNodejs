<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../vistas/head'); %>
        <title>Agregar</title>
</head>

<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="./home">
                <img src="https://w7.pngwing.com/pngs/396/796/png-transparent-home-house-lia-space-button-angle-logo-stock-photography.png"
                    alt="Logo" class="d-inline-block align-text-top" width="30" height="30">
                El usuario conectado es: <%= nombre %>
                    <a href="./cerrar" class="btn btn-danger ms-4">cerrar session</a>

            </a>
        </div>
    </nav>
    <% if ( usuario==1 ) { %>
        <div class="container p-5 mt-3">
            <div class="m-5 row justify-content-center align-items-center">
                <div class="card text-white bg-dark p-5 mb-4" style="max-width: 100%;">
                    <form class="mt-3" action="guardar" method="POST">
                        <div class="row">
                            <div class="col-6">
                                <label class="m-2" for="nombre">Nombre</label>
                                <input type="text" class="form-control" name="nombre" placeholder="nombre">
                            </div>
                            <div class="col-6">
                                <label class="m-2" for="Libro">Libro</label>
                                <input type="text" class="form-control" name="libro" placeholder="Url libro">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-6">
                                <label class="m-2" for="nombre">Autor</label>
                                <select class="form-select" aria-label="Default select example" name="autor">
                                    <option selected>Elige el autor</option>
                                    <% libros.forEach((curso)=>{%>
                                        <option value="<%= curso.id %> ">
                                            <%= curso.autor %>
                                        </option>
                                        <% });%>
                                </select>
                            </div>
                            <div class="col-6">
                                <label class="m-2" for="Libro">Categoria</label>
                                <select class="form-select" aria-label="Default select example" name="categoria">
                                    <option selected>Elige la categoria</option>
                                    <% libros.forEach((curso)=>{%>
                                        <option>
                                            <%= curso.categoria %>
                                        </option>
                                        <% });%>
                                </select>
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <label class="m-2" for="Descripcion">Descripcion</label>
                            <input type="text" class="form-control" name="descripcion" placeholder="Descripcion">
                        </div>
                        <div class="mt-5 m-3 mx-auto d-block">
                            <button type="submit" class="btn btn-success">aceptar</button>
                            <a href="./" class="btn btn-danger">cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <% } %>

</body>

</html>